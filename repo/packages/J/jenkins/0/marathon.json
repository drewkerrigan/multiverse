{
  "id": "{{jenkins.framework-name}}",
  "cpus": {{jenkins.cpus}},
  "mem": {{jenkins.mem}},
  "instances": 1,
  "env": {
      "CATALINA_OPTS": "{{jenkins.catalina_opts}}",
      "JENKINS_FRAMEWORK_NAME": "{{jenkins.framework-name}}",
      "JENKINS_CONTEXT": "/service/{{jenkins.framework-name}}"
  },
   "container": {
       "type": "DOCKER",
       "docker": {
           "image": "rogerignazio/jenkins-tomcat",
           "network": "BRIDGE",
           "portMappings": [
               { "containerPort": 8080, "hostPort": 0 }
           ]
       },
       "volumes": [
           {
               "containerPath": "/var/jenkins_home",
               "hostPath": "{{jenkins.host_volume}}/{{jenkins.framework-name}}",
               "mode": "RW"
           }
       ]
   },
   "healthChecks": [
    {
      "path": "/service/{{jenkins.framework-name}}",
      "portIndex": 0,
      "protocol": "HTTP",
      "gracePeriodSeconds": 30,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ]
}
